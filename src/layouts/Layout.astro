---
import '@fontsource/anton';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <body>
    <slot />
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init({
        duration: 600,
        once: true,
      });
    </script>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'Druk-Condensed';
    src: url('/DrukCond-Super.otf') format('opentype');
  }
  @font-face {
    font-family: 'Microgramma';
    src: url('/Microgramma.otf') format('opentype');
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #000;
    color: #ffffff;
    text-shadow: #e3c6c1 0px 0px 8px;
  }
  lite-youtube {
    max-width: none !important;
  }
  lite-youtube::before {
    background-image: none !important;
  }
  h1,
  h2 {
    animation: text-anim 3s linear infinite;
  }
  h1 {
    font-family: 'Druk-Condensed', 'Anton', sans-serif;
  }
  h2 {
    font-family: 'Microgramma', system-ui, sans-serif;
  }

  @keyframes text-anim {
    0% {
      text-shadow: #e3c6c1 0px 0px 8px;
    }
    33% {
      text-shadow: #e3c6c1 2px 2px 20px;
    }
    66% {
      text-shadow: #e3c6c1 -2px -2px 20px;
    }
    100% {
      text-shadow: #e3c6c1 0px 0px 8px;
    }
  }
</style>
